{
  "git.ignoreLimitWarning": true,
  "editor.formatOnSave": true,
  "explorerTerminal.showDockerCommands": true,
  "explorerTerminal.commands": [
    {
      "name": "ls",
      "command": "ls"
    },
    {
      "name": "Docker Dev",
      "command": "cd server/ && ./dev-start.sh"
    },
    {
      "name": "Docker prod",
      "command": "cd server/ && docker-compose -f docker-compose.prod.yml up -d"
    },
    {
      "name": "Docker Down",
      "command": "cd server/ && docker-compose down"
    }
  ]
}
